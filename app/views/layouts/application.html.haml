%html
  %head
    %title
      Lookbox
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
  = render 'shared/header'
  .container
    #content
      - if notice
        .alert.alert-success
          = notice
      - if alert
        .alert.alert-danger
          = alert
      = yield



