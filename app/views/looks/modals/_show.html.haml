%div{class: "modal-dialog", role: "document"}
  .modal-content
    .modal-header
      %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
        %span{'aria-hidden' => 'true'} Ã—
      %h4.modal-title#modal-label= look.name
    .modal-body.picture-show
      = look.description
      - if look.screen.present?
        .look-screen
          = image_tag look.screen.image.url, { class: "show-picture-image"}
    .modal-footer
      = link_to 'Edit', edit_look_path(look), { class: "btn btn-primary" }
      = link_to 'Destroy', look, method: :delete, data: { confirm: 'Are you sure?' }
