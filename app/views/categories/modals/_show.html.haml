%div{class: "modal-dialog", role: "document"}
  .modal-content
    .modal-header
      = button_to 'Close', {}, {class: "close", "data-dismiss": "modal"}
      %h4.modal-title#modal-label= category.name
    .modal-body
      = render 'categories/show'
    .modal-footer
      = link_to 'Edit', edit_category_path(category), remote: true, class: "btn btn-primary"
      = link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-delete" do
        %i.glyphicon.glyphicon-trash
        Destroy
