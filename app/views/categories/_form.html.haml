= form_for(@category, authenticity_token: true, :html => {:multipart => true}) do |f|
  = render "shared/error_message", entity: @category

  .form-group
    .row
      = f.label :name, class: "col-sm-2 control-label"
      .col-sm-10
        = f.text_field :name

  .form-group
    .row
      = f.label :description, class: "col-sm-2 control-label"
      .col-sm-10
        = f.text_field :description

  .form-group
    .row
      = f.label :parent_id, class: "col-sm-2 control-label"
      .col-sm-10
        = f.select :parent_id, nested_set_options(current_user.categories) {|i| "#{'-' * i.level} #{i.name}" }, { include_blank: true}

  .form-group
    .row
      .col-sm-offset-2.col-sm-10
        .actions
          = f.submit

  = render 'pictures_list'