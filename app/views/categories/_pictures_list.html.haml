- pictures.each do |picture|
  .picture-block
    = check_box_tag :picture_ids, picture.id, true, name: 'category[picture_ids][]', class: "mark-picture-chbox"
    .image-block
      = image_tag picture.image.thumb, class: "image-space", 'data-toggle': "tooltip", title: "Click to select/diselect"
    .picture-action
      .select-diselect-picture
        .remove-picture
          %i.glyphicon.glyphicon-remove
        .refresh-picture{style: "display: none"}
          %i.glyphicon.glyphicon-refresh




