%div{class: "modal-dialog", role: "document"}
  .modal-content
    .modal-header
      %button.close{'aria-label' => t("modal_forms.close"), 'data-dismiss' => 'modal', type: 'button'}
        %span{'aria-hidden' => 'true'} Ã—
      %h4.modal-title#modal-label
        %strong= picture.title
      .modal-description= picture.description
    .modal-body.picture-show{id: "show-image-block-#{picture.id}", picture_id: picture.id}
      .row
        .col-sm-6
          - if picture.previous_id.present?
            = link_to picture_path({id: picture.previous_id}), class: "btn btn-sm btn-primary btn-left", remote: true do
              %span.glyphicon.glyphicon-triangle-left
        .col-sm-6
          - if picture.next_id.present?
            = link_to picture_path({id: picture.next_id}), class: "btn btn-sm btn-primary btn-right", remote: true do
              %span.glyphicon.glyphicon-triangle-right
      .row
        = image_tag picture.preview_image_large, { class: "show-picture-image"}
    .modal-footer
      = link_to edit_picture_path(picture), class: "btn btn-sm btn-primary", remote: true do
        %span.glyphicon.glyphicon-pencil
        = t("modal_forms.edit")
      = link_to picture, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: t("modal_forms.confirm_delete") } do
        %span.glyphicon.glyphicon-trash
        = t("modal_forms.delete")
