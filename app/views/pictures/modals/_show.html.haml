%div{class: "modal-dialog", role: "document"}
  .modal-content
    .modal-header
      %button.close{'aria-label' => t("modal_forms.close"), 'data-dismiss' => 'modal', type: 'button'}
        %span{'aria-hidden' => 'true'} Ã—
      %h4.modal-title#modal-label
        %strong= picture.title
      .modal-description= picture.description
    .modal-body.picture-show{id: "show-image-block-#{picture.id}", picture_id: picture.id}
      .row
        .col-sm-4
          - if picture.previous_id.present?
            = link_to '', "#", data: {toggle: "modal", target: "#picture-modal-#{picture.previous_id}", 'picture-id': "#{picture.id}"}, class: "btn-left", title: "Previous image"
        .col-sm-4
          = link_to '', "#", data: {'picture-id': "#{picture.id}"}, class: "btn-zoom-loupe", title: "Click to on/off loupe"
        .col-sm-4
          - if picture.next_id.present?
            = link_to '', "#", data: {toggle: "modal", target: "#picture-modal-#{picture.next_id}", 'picture-id': "#{picture.id}" }, class: "btn-right", title: "Next image"
      .row
        = image_tag picture.preview_image_large, { class: "show-picture-image", "data-zoom-image": "#{picture.image.url}"}
    .modal-footer
      = link_to edit_picture_path(picture), class: "btn btn-sm btn-primary", remote: true do
        %span.glyphicon.glyphicon-pencil
        = t("modal_forms.edit")
      = link_to picture, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: t("modal_forms.confirm_delete") } do
        %span.glyphicon.glyphicon-trash
        = t("modal_forms.delete")
