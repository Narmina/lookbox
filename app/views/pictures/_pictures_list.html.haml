- @pictures.each do |picture|
  .picture-block
    -#%div{class: "modal fade", id: "picture-modal-#{picture.id}", tabindex: "-1", role: "dialog", "aria-labelledby": "modal-label "}
      = render 'pictures/modals/show', picture: picture
    .image-block{id: "image-block-#{picture.id}"}
      = link_to(image_tag(picture.preview_image, class: "image-space"), picture, remote: true)
    .picture-action
      -#= link_to 'Show', "#", data: {class: "btn btn-primary btn-lg", toggle: "modal", target: "#picture-modal-#{picture.id}"}
      = link_to 'Show', picture, remote: true
      = link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }

= paginate @pictures #, remote: true


