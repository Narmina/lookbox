%div{class: "modal-dialog", role: "document"}
  .modal-content
    .modal-header
      = button_to 'Close', {}, {class: "close", "data-dismiss": "modal"}
      %h4.modal-title#modal-label= picture.title
    .modal-body
      = picture.description
      = image_tag picture.image.url
    .modal-footer
      = link_to 'Edit', edit_picture_path(picture),  {class: "btn btn-primary", remote: true}
      = link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }
