<% if @picture.image_timestamp.present? %>
  image_block = $("#image-block-<%= @picture.id %> img.image-space")
  image_block.attr('src', image_block.attr('src') + "?timestamp=<%=@picture.image_timestamp%>");
<% end %>

<% if @picture.previous_changes['title'].present? %>
  title_element = $("#image-block-<%= @picture.id %>").siblings('.picture-title')
  new_title = title_element.html().replace("<%= @picture.previous_changes['title'][0]%>", "<%= @picture.previous_changes['title'][1]%>" );
  title_element.html(new_title);
<% end %>
